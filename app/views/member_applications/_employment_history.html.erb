<%= f.select :ever_worked, ["No", "Yes"],
  label: "Have you ever worked for pay?",
  selected: params[:ever_worked] %>

<%= f.select :worked_last_12_months, ["No", "Yes"],
  label: "Have you worked in the last 12 months?",
  selected: params[:worked_last_12_months] %>

<br>

<h5>
  Please list all employment. Be sure to include the most recent and longest
  job.
</h5>

<div class="form-inline">
  <div class="col-xs-4 row_element">
    <div class="col-lg-6 col-xs-6">
      <strong>Start Date</strong>
    </div>
    <div class="col-lg-6 col-xs-6">
      <strong>End Date</strong>
    </div>
  </div>

  <div class="col-xs-4 row_element">
    <strong>Employer</strong>
  </div>

  <div class="col-xs-4 row_element">
    <div class="col-lg-6 col-xs-6">
      <strong>Title</strong>
    </div>
    <div class="col-lg-6 col-xs-6">
      <strong>Type of work</strong>
    </div>
  </div>
</div>

<div class="form-inline">
  <div class="col-xs-4 row_element">
    <div class="col-lg-6 col-xs-6">
      <%= f.text_field :work_start_date_1, value: params[:work_start_date_1],
        hide_label: true, control_col: "col-lg-12",
        class: "row_field",
        data: { behavior: "flatpickr-months-only" } %>
    </div>
    <div class="col-lg-6 col-xs-6">
      <%= f.text_field :work_end_date_1, value: params[:work_end_date_1],
        hide_label: true, control_col: "col-lg-12",
        class: "row_field",
        data: { behavior: "flatpickr-months-only" } %>
    </div>
  </div>
  <div class="col-xs-4 row_element">
    <%= f.text_field :employer_1, value: params[:employer_1],
      hide_label: true, control_col: "col-lg-12", class: "row_field" %>
  </div>
  <div class="col-xs-4 row_element">
    <div class="col-lg-6 col-xs-6">
      <%= f.text_field :work_title_1, value: params[:work_title_1],
        hide_label: true, control_col: "col-lg-12", class: "row_field" %>
    </div>
    <div class="col-lg-6 col-xs-6">
      <%= f.text_field :work_type_1, value: params[:work_type_1],
        hide_label: true, control_col: "col-lg-12", class: "row_field" %>
    </div>
  </div>
</div>

